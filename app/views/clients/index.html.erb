<h1>Listing clients</h1>

<table>
  <tr>
    <th>Nume</th>
    <th>Prenume</th>
    <th>Telefon</th>
    <th>Mail</th>
    <th>Creat</th>
    <th>Modificat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.nume %></td>
    <td><%= client.prenume %></td>
    <td><%= client.telefon %></td>
    <td><%= client.mail %></td>
    <td><%= client.created_at.strftime('%d %b %Y') %></td>
    <td><%= client.updated_at.strftime('%d %b %Y') %></td>
    <td><%= link_to 'Vizualizeaza', client %></td>
    <td><%= link_to 'Modifica', edit_client_path(client) %></td>
    <td><%= link_to 'Sterge', client, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

